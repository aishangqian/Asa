<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SoActivity">
    <!--标题和放大镜-->
    <com.example.y700_15.lx_ykmn.view.TitalBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tital"
        />

    <!--最近搜索-->
    <com.example.y700_15.lx_ykmn.view.WaterGroupNeameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="最近搜索"
        />

    <!--显示内容-->
    <com.example.y700_15.lx_ykmn.view.WaterContents
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watercon"
        android:layout_marginTop="15dp"
        />

    <!--猜你想找-->
    <com.example.y700_15.lx_ykmn.view.WaterGroupNeameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="猜你想找"
        />

    <!--猜显示内容-->
    <com.example.y700_15.lx_ykmn.view.WaterContents
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watercon01"
        android:layout_marginTop="15dp"/>

</LinearLayout>